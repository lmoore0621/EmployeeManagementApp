
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<p>Employee Data and input</p>

<div class="col-sm-2 pull-left">
    <label>Page Size:</label>
    <select ng-model="data_limit" class="form-control">
        <option>10</option>
        <option>20</option>
        <option>50</option>
        <option>100</option>
    </select>
</div>

<form>
    <table class="table table-striped table-condensed table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Mobile</th>
                <th>DOB</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Email</th>
                <th>Degree</th>
                <th>State</th>
                <th>&nbsp;</th>
            </tr>
            <tr>
                <th><input ng-model="employee.name" class="form-control" /></th>
                <th><input ng-model="employee.mobile" class="form-control" /></th>
                <th><input ng-model="employee.date_of_birth" class="form-control" type="date" data-date-format="YYYY MM DD" value="2015-08-09" /></th>
                <th class="form-group">
                        <select ng-model="employee.gender" class="form-control">
                            <option>Choose</option>
                            <option ng-value="0">Female</option>
                            <option ng-value="1">Male</option>
                        </select>
                    </th>
                <th><input type="number" min="18" max="100" ng-model="employee.age" class="form-control" disabled /></th>
                <th><input type="email" ng-model="employee.email" class="form-control" /></th>
                <th class="form-group">
                    <select class="form-control" ng-model="employee.education_Id">
                        <option>Choose</option>
                        <option ng-repeat="degree in educations" ng-value="{{ degree.education_Id }}">{{ degree.Degree_Type }}</option>
                    </select>
                </th>
                <th>
                    <select class="form-control" ng-model="employee.state_Id">
                        <option>Choose</option>
                        <option ng-repeat="state in states" ng-value="{{state.usa_state_id}}">{{ state.State }}</option>
                    </select>
                </th>
                <th style="display: inline-flex">
                    <button ng-click="updateEmployeeInfo()" ng-show="updating" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                    </button>
                    <button ng-click="addEmployeeInfo()" ng-hide="updating" class="btn btn-success">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </th>
            </tr>
        </thead>

        <tbody>
            <tr ng-repeat="employee in employees = (file | filter:search | orderBy : base :reverse) | beginning_data:(current_grid-1)*data_limit | limitTo:data_limit">
                <td>{{ employee.name }}</td>
                <td>{{ employee.mobile }}</td>
                <td>{{ employee.date_of_birth }}</td>
                <td>{{ employee.gender === 0 ? "Female" : "Male" }}</td>
                <td>{{ employee.age }}</td>
                <td>{{ employee.email }}</td>
                <td>{{ employee.Education.Degree_Type }}</td>
                <td>{{ employee.USAState.State }}</td>
                <td style="display: inline-flex">
                    <button ng-click="selectEmployeeToUpdate(employee)" class="btn btn-warning">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button ng-click="deleteEmployeeById(employee.employee_Id)" class="btn btn-danger">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</form>

<div class="col-md-12" ng-show="filter_data == 0">
    <div class="col-md-12">
        <h4>No records found..</h4>
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6 pull-left">
        <h5>Showing {{ employees.length }} of {{ entire_user}} entries</h5>
    </div>
    <div class="col-md-6" ng-show="filter_data > 0">
        <div pagination="" page="current_grid" on-select-page="page_position(page)" boundary-links="true" total-items="filter_data" items-per-page="data_limit" class="pagination-small pull-right" previous-text="&laquo;" next-text="&raquo;"></div>
    </div>
</div>
